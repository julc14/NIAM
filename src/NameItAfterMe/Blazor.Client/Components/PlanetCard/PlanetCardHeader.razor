<MudCardHeader>
    <CardHeaderAvatar>
        <MudIcon 
            Color="Color.Primary" 
            Icon="@Icons.Material.Filled.BlurCircular" 
            Size="Size.Large" />
    </CardHeaderAvatar>
    <CardHeaderContent>
        <MudText Typo="Typo.body1">@Exoplanet.Name</MudText>
        <MudText Typo="Typo.body2">Current Name</MudText>
    </CardHeaderContent>
</MudCardHeader>

@code {
    [Parameter, EditorRequired]
    public required ExoplanetDto Exoplanet { get; set; }
}
