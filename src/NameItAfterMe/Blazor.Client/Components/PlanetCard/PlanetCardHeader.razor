<MudCardHeader>
    <CardHeaderAvatar>
        <MudIcon 
            Color="Color.Primary" 
            Icon="@Icons.Material.Filled.BlurCircular" 
            Size="Size.Large" />
    </CardHeaderAvatar>
    <CardHeaderContent>
        <MudText Typo="Typo.body1">@Name</MudText>
        <MudText Typo="Typo.body2">Current Name</MudText>
    </CardHeaderContent>
    <CardHeaderActions>
        <MudIconButton 
            Icon="@Icons.Material.Filled.Settings" 
            Color="Color.Default" />
    </CardHeaderActions>
</MudCardHeader>

@code {
    [Parameter, EditorRequired] 
    public required string Name { get; set; }
}
