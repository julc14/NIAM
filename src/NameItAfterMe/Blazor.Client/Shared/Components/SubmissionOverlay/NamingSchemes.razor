<OverlayTabTemplate>
    <MudStack>

        <MudForm>
            <MudTextField 
                    T="string" 
                    Label="Your Name" 
                    Required="true"
                    Value="State.PersonsName"
                    ValueChanged="(name) => State.PersonsName = name" />
        </MudForm>

        <MudSelect 
            T="@NamingScheme"
            ValueChanged="(scheme) => State.Scheme = scheme">

            @foreach (var scheme in Enum.GetValues<NamingScheme>())
            {
                <MudSelectItem Value="@scheme" T="@NamingScheme" />
            }

        </MudSelect>

    </MudStack>
</OverlayTabTemplate>

@code {
    [Parameter]
    public required NameExoplanetOperationState State { get; set; }
}
