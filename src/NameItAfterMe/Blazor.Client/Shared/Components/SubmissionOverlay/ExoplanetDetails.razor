<OverlayTabTemplate>
    <MudStack>
        <MudPaper Elevation="@Elevation" Class="pa-4">
            <MudStack Row="true">

                <MudAvatar Image="@ImageSource" Size="Size.Large" />

                <MudStack Justify="Justify.Center" Spacing="ContentSpacing">
                    <MudText Typo="Typo.body1">Exoplanet</MudText>
                    <MudText Typo="Typo.body2">@Exoplanet.Name</MudText>
                </MudStack>

            </MudStack>
        </MudPaper>
        <MudPaper Elevation="@Elevation" Class="pa-4">
            <MudStack Row="true">

                <MudAvatar Image="/Images/Star1.jpeg" Size="Size.Large" />

                <MudStack Justify="Justify.Center" Spacing="ContentSpacing">
                    <MudText Typo="Typo.body1">Star's Name</MudText>
                    <MudText Typo="Typo.body2">@Exoplanet.HostName</MudText>
                </MudStack>

            </MudStack>
        </MudPaper>
        <MudPaper Elevation="@Elevation" Class="pa-4">
            <MudStack Row="true">

                <MudStack Justify="Justify.Center" Spacing="ContentSpacing">
                    <MudText Typo="Typo.body1">Distance From Earth</MudText>
                    <MudText Typo="Typo.body2">@Exoplanet.Distance</MudText>
                </MudStack>

            </MudStack>
        </MudPaper>
    </MudStack>
</OverlayTabTemplate>

@code {
    [Parameter, EditorRequired]
    public required string ImageSource { get; set; }

    [Parameter, EditorRequired]
    public required ExoplanetDto Exoplanet { get; set; }

    [Parameter] 
    public int Elevation { get; set; }

    [Parameter]
    public int ContentSpacing { get; set; }
}
